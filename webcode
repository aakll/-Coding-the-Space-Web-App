import React, { useState } from 'react';

export default function App() {
  const [fileName, setFileName] = useState('');
  const [uploadStatus, setUploadStatus] = useState('');

  const handleFileUpload = (e) => {
    const file = e.target.files?.[0];
    if (file && file.name.endsWith('.csv')) {
      setFileName(file.name);
      setUploadStatus('File selected. Click "Apply" to process.');
    } else {
      setFileName('');
      setUploadStatus('Please upload a valid .csv file.');
    }
  };

  const handleSubmit = () => {
    if (!fileName) {
      setUploadStatus('Please select a .csv file before applying.');
      return;
    }
    setUploadStatus('Processing your file...');
    setTimeout(() => {
      setUploadStatus('Prediction complete! View results below.');
    }, 2000);
  };

  const floatingObjects = ['üöÄ', 'ü™ê', 'üåï', 'üõ∞Ô∏è', 'üå†', 'üåç', 'üåå', 'üî≠'];

  const teamMembers = [
    {
      name: 'Ali Kawar',
      role: 'Web Developer',
      bio: 'Designing and developing the user-facing web application for model interaction.',
      linkedin: 'https://www.linkedin.com/in/alikawar/ ',
    },
    {
      name: 'Hanin Khalil',
      role: 'Data Scientist',
      bio: 'Analyzing datasets and building predictive models to detect hazardous space objects.',
      linkedin: 'https://www.linkedin.com/in/hanine-khalil-62a7962b8/ ',
    },
    {
      name: 'Samira Jewish',
      role: 'Machine Learning Engineer',
      bio: 'Training and optimizing classification models for accurate hazard detection.',
      linkedin: 'https://www.linkedin.com/in/samira-jawish-366a422b2/ ',
    },
    {
      name: 'Jinan Rachid',
      role: 'UI/UX Designer',
      bio: 'Designing clean and intuitive interfaces for the web application.',
      linkedin: 'https://www.linkedin.com/in/jinan-rachid/ ',
    },
    {
      name: 'Aya Rayed',
      role: 'Frontend Developer',
      bio: 'Implementing responsive and interactive frontend components for the application.',
      linkedin: 'https://www.linkedin.com/in/aya-rayed-01284a2a8/ ',
    },
    {
      name: 'Batoul Hamieh',
      role: 'Project Manager',
      bio: 'Coordinating development and ensuring smooth integration of all components.',
      linkedin: 'https://www.linkedin.com/in/batoul-hamieh/ ',
    },
  ];

  return (
    <div className="min-h-screen bg-black text-white font-sans overflow-x-hidden">
      {/* Sticky Navigation Bar */}
      <nav className="bg-gray-900 py-4 shadow-md fixed top-0 left-0 w-full z-30">
        <div className="container mx-auto flex justify-center gap-8">
          <a href="#header" className="text-white hover:text-blue-400 transition-colors duration-300">Home</a>
          <a href="#about" className="text-white hover:text-blue-400 transition-colors duration-300">About</a>
          <a href="#github" className="text-white hover:text-blue-400 transition-colors duration-300">GitHub</a>
          <a href="#presentation" className="text-white hover:text-blue-400 transition-colors duration-300">Presentation</a>
          <a href="#team" className="text-white hover:text-blue-400 transition-colors duration-300">Team</a>
        </div>
      </nav>

      {/* Header Section */}
      <header id="header" className="relative h-screen flex flex-col items-center justify-center text-center px-4 overflow-hidden">
        {/* Floating Emojis */}
        <div className="absolute inset-0 pointer-events-none z-0">
          {Array.from({ length: 20 }, (_, i) => (
            <div
              key={i}
              className="absolute text-2xl animate-float-bounce"
              style={{
                left: `${Math.random() * 100}%`,
                top: `${Math.random() * 100}%`,
